{
  "version": "0.2.0",
  "configurations": [
    {
      // 调试回测：仅需 TOML（必须包含 algorithm-location）
      "name": "Launcher Backtest",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/Launcher/Launcher.fsproj",
        "--",
        "backtest",
        "-T",
        "${workspaceFolder}/Launcher/backtesting.toml"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        // 供 TOML 中的 ${PWD} 展开使用
        "PWD": "${workspaceFolder}"
      }
    },
    {
      // 调试实盘：示例使用 Launcher/config.toml（请按需替换为你的 live TOML）
      "name": "Launcher Live",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/Launcher/Launcher.fsproj",
        "--",
        "live",
        "-T",
        "${workspaceFolder}/Launcher/config.toml"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        "PWD": "${workspaceFolder}"
      }
    }
  ]
}
